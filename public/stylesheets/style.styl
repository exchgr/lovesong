$background = #93e7e0
$background-image = url('../img/noise.png')
$logoColor = #e8475f
$bodyFont = Lato, sans-serif

*
  font-family: $bodyFont

body, .btn
  background-image: $background-image

body
  background-color: $background

.btn-default
  background-color: #ddd
  border-color: #ddd

  &:hover
    background-color: #ccc
    border-color: #bbb

h1.logo, a.logo
  color: $logoColor
  font-family: 'Courgette', cursive

header.navbar
  display: none
  background-color: rgba(0, 0, 0, 0.1)
  border-radius: 0

  .logo
    font-size: 2em

    &:hover
      color: darken($logoColor, 20%)

  .avatar
    margin: -.25em 1em -.25em -.25em
    border-radius: 50%
    height: 2em

.jumbotron
  padding: 0
  background: transparent
  text-align: center
  position: absolute
  left: 0
  top: 0
  height: 100%
  width: 100%

  .vert-center
    position: absolute
    top: 50%
    width: 100%

  .logo
    font-size: 7em

#loading
  display: none

#profile-template
  display: none

h1
  font-family: $bodyFont

.center // I'm sorry
  text-align: center

.card
  background: #fff
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3)
  overflow: hidden
  max-height: 520px

  .profile
    position: relative
  
    h1.name
      display: inline-block
    
    .match
      position: absolute
      top: 0
      right: 15px
      
      h1
        margin-bottom: 1px
          
    img.avatar
       display: block
       margin: 0 auto
       border-radius: 50%
       width: 80%

     .btn-group
       margin: 1em auto

.bands
  padding-left: 2em
  padding-top: 1em
  background: #eee
  
  height: 1000px

  h1
    margin-top: 0
    margin-bottom: .5em

  ul
    list-style: none
    margin: 0
    padding: 0

    li
      display: inline-block
      vertical-align: top
      margin-top: 0
      margin-bottom: 1em
      margin-right: 1em
      width: 45%
      
      .art
        float: left
        width: 4em
        height: 4em
        background-size: cover
      
      .name, .like
        padding-left: 10px
        margin-top: 0
      
      .name
        font-size: 140%
        
      .like
        color: #aaa
        font-style: italic;
        font-size: 100%;
        margin-top: 1.2em;

@media (max-width: 560px)
  .jumbotron
    .logo
      font-size: 3em
